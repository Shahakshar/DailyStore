<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_88sdp"
        android:layout_margin="8dp"
        android:background="@color/g_card_background">

        <ImageView
            android:id="@+id/imageSpecialRvItem"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/test_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSpecialItemName"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_light"
            android:text="Scotch Premium"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageSpecialRvItem"
            app:layout_constraintTop_toTopOf="@id/imageSpecialRvItem" />

        <TextView
            android:id="@+id/tvSpecialItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display"
            android:text="â‚¹1600"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/tvSpecialItemName"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialItemName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_see_product"
            android:layout_width="@dimen/_83sdp"
            android:layout_height="@dimen/_28sdp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/poppins_light"
            android:text="@string/g_see_product"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvSpecialItemName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>